generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model dynamicDashboard {
  id         String   @id @default(uuid())
  slug       String   @unique
  title      String
  createdAt  DateTime @default(now()) @map("created_at")
  createdBy  String   @map("created_by")
  updatedAt  DateTime @updatedAt @map("updated_at")
  updateBy   String   @map("updated_by")
  layoutJSON Json     @map("layout_json")

  @@map("dynamic_dashboard")
}

model dashboardComponent {
  id            String   @id @default(uuid())
  name          String
  component     String
  storybookUrl  String?  @map("storybook_url")
  dataUrl       String   @map("data_url")
  dataUrlMethod String   @default("GET") @map("data_url_method")
  isExternal    Boolean? @default(false) @map("is_external")
  createdAt     DateTime @default(now()) @map("created_at")
  createdBy     String   @map("created_by")
  updatedAt     DateTime @updatedAt @map("updated_at")
  updateBy      String   @map("updated_by")
}
